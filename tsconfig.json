{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./built",
        "strict": true,
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "inlineSourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test/**/*"
    ]
}
