{
  "name": "@xilution/xilution-cli",
  "version": "1.0.4",
  "description": "The Xilution command line interface. Provides command line abstractions for Xilution APIs.",
  "main": "./built/index.js",
  "bin": {
    "xln-cli": "./built/index.js"
  },
  "files": [
    "built"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xilution/xilution-cli"
  },
  "bugs": {
    "url": "https://github.com/xilution/xilution-cli/issues"
  },
  "homepage": "https://github.com/xilution/xilution-cli",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "ts-node ./src/index.ts",
    "lint": "tslint 'src/**/*.ts' '__tests__/**/*.ts'",
    "test": "yarn test:unit",
    "test:unit": "jest",
    "verify": "yarn lint && yarn test",
    "release": "yarn build && semantic-release --ci false"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/yargs": "^13.0.1",
    "axios": "^0.19.0",
    "date-fns": "^1.30.1",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.7",
    "@types/jest": "^24.0.11",
    "@types/node": "^12.6.8",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "semantic-release": "^15.13.12",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.4"
  },
  "engines": {
    "node": ">=8.10.0",
    "yarn": ">=1.15.2",
    "npm": ">=6.9.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "scope": "README",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "style",
          "release": "patch"
        }
      ],
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ]
      }
    },
    "generateNotes": {
      "preset": "angular",
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ]
      },
      "writerOpts": {
        "commitsSort": [
          "subject",
          "scope"
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "author": "Todd Brunia <tbrunia@gmail.com> (http://www.github.com/tbrunia)",
  "license": "MIT"
}
